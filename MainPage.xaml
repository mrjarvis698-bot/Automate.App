<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Automate.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="{AppThemeBinding Light=automate_d_logo_svg.png, Dark=automate_l_logo_svg.png}"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <HorizontalStackLayout
                HorizontalOptions="Center">

                <Button
                    x:Name="get_start"  
                    Text="Get Started"
                    HorizontalOptions="Center"
                    Clicked="OnGetStartedClicked" />
                
                <Button
                    x:Name="bypass"
                    Text="Bypass"
                    HorizontalOptions="Center"
                    Clicked="OnBypassClicked" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
